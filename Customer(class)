public class Customer {
    public static int record;
    private String custId,custName,phoneNum,postcode;
    public Customer(){
    }
    public Customer(String id,String name,String phnum,String code){
        custId=id;
        custName=name;
        phoneNum=phnum;
        postcode=code;
        record++;
    }
    public String getCustId(){
        return custId;
    }
    public String getCustName(){
        return custName;
    }
    public String getPhoneNum(){
        return phoneNum;
    }
    public String getPostcode(){
        return postcode;
    }
    public String getAll(){
        return "Customer ID : "+custId+"Customer Name : "+custName+"Phone Number : "+phoneNum+"Postcode : "+postcode;
    }
    public boolean filterCustomer(String search){
        if(custId.equals(search)||custName.equals(search)||postcode.equals(search)||phoneNum.equals(search))
            return true;
        else
            return false;
    }
}
